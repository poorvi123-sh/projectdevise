<%= form_for :post, url: posts_path,remote:true, html: { id: "newpost" } do |form| %>

<div class="field">
  <%= form.label :body %>
  <%= form.text_area :body,class:"form-control w-50" %>
</div>

<div class="field">
  <%= form.label :description %>
  <%= form.text_field :description,class:"form-control w-50" %>
</div>

<div class="field">
  <%= form.hidden_field :user_id%>
</div>
<br>
<div class="actions">
  <%= form.submit 'Submit',class:"btn btn-primary" %>
</div>
<% end %>



