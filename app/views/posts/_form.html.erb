<%= form_for :post, url: posts_path,remote:true, html: { id: "newpost" } do |form| %>

<div class="field">
  <%= form.label :body %>
  <%= form.text_area :body %>
</div>

<div class="field">
  <%= form.label :description %>
  <%= form.text_field :description %>
</div>

<div class="field">
  <%= form.hidden_field :user_id%>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>



